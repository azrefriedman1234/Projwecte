<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <com.pasiflonet.mobile.ui.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivDraggableLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#1E1E1E"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/previewContainer"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editing Tools"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/etCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Caption..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="#333333"
                android:padding="12dp"
                android:minLines="3"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnTranslate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ Translate to HE"
                android:backgroundTint="#673AB7"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#444444" android:layout_marginVertical="15dp"/>

            <TextView android:text="Visual Effects" android:textColor="#AAAAAA" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="8dp">
                <Button android:id="@+id/btnModeBlur" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Blur" android:textSize="12sp" android:backgroundTint="#FF5722" android:layout_marginEnd="5dp"/>
                <Button android:id="@+id/btnModeLogo" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Logo" android:textSize="12sp" android:backgroundTint="#2196F3" android:layout_marginStart="5dp"/>
            </LinearLayout>

            <TextView android:text="Logo Size" android:textColor="#AAAAAA" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <SeekBar android:id="@+id/sbLogoSize" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:progress="20" android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸš€ SEND NOW"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#FF5252"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
