<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apiContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="API Config" android:textStyle="bold" />
    <EditText android:id="@+id/etApiId" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="API ID" android:inputType="number" />
    <EditText android:id="@+id/etApiHash" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="API Hash" />
    <Button android:id="@+id/btnSaveApi" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Save" />
</LinearLayout>
